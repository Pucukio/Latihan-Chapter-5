<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgViews"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        
        <TextView
            android:id="@+id/tvTitleNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul Film"
            app:layout_constraintStart_toEndOf="@id/imgViews"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tvDateNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 April 2023"
            app:layout_constraintStart_toStartOf="@id/tvTitleNews"
            app:layout_constraintTop_toBottomOf="@id/tvTitleNews"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>